{
    "name": "jorisnoo/statamic-imageboss",
    "description": "ImageBoss integration for Statamic with Glide fallback",
    "keywords": [
        "statamic",
        "imageboss",
        "images",
        "responsive",
        "srcset",
        "glide"
    ],
    "homepage": "https://github.com/jorisnoo/statamic-imageboss",
    "license": "MIT",
    "support": {
        "source": "https://github.com/jorisnoo/statamic-imageboss",
        "issues": "https://github.com/jorisnoo/statamic-imageboss/issues"
    },
    "authors": [
        {
            "name": "Joris Noordermeer",
            "email": "contact@noordermeer.ch",
            "homepage": "https://github.com/jorisnoo",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "spatie/laravel-package-tools": "^1.92.7",
        "illuminate/contracts": "^11.0||^12.0",
        "statamic/cms": "^5.0||^6.0"
    },
    "require-dev": {
        "laravel/pint": "^1.27",
        "nunomaduro/collision": "^8.8.3",
        "orchestra/testbench": "^10.8.0||^9.0.0",
        "pestphp/pest": "^3.0||^4.3.1",
        "pestphp/pest-plugin-arch": "^3.0||^4.0",
        "pestphp/pest-plugin-laravel": "^3.0||^4.0",
        "spatie/laravel-ray": "^1.43.3"
    },
    "autoload": {
        "psr-4": {
            "Noo\\StatamicImageboss\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Noo\\StatamicImageboss\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true,
            "pixelfear/composer-dist-plugin": true
        }
    },
    "extra": {
        "statamic": {
            "name": "ImageBoss",
            "description": "ImageBoss integration with Glide fallback"
        },
        "laravel": {
            "providers": [
                "Noo\\StatamicImageboss\\StatamicImagebossServiceProvider"
            ],
            "aliases": {
                "ImageBoss": "Noo\\StatamicImageboss\\Facades\\ImageBoss"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
